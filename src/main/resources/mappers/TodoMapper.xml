<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.todo.mapper.TodoMapper">
    <select id="getTime" resultType="string">
        select now()
    </select>
    <select id="selectAll" resultType="com.project.todo.domain.TodoVO">
        select * from tbl_todo  order by tno desc;
    </select>
    <select id="selectOne" resultType="com.project.todo.domain.TodoVO">
        select * from tbl_todo where tno = #{tno}
    </select>
    <insert id="insert">
        insert into tbl_todo (title,dueDate,writer) values (#{title},#{dueDate},#{writer})
    </insert>
    <delete id="delete">
        delete from tbl_todo where tno = #{tno}
    </delete>
    <update id="update">
        update tbl_todo set title = #{title} , dueDate = #{dueDate}, finished= #{finished} where tno = #{tno}
    </update>
    <update id="updateFinished">
        update tbl_todo set finished = #{finished} where tno = #{tno}
    </update>


</mapper>